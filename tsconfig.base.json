{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@videogame-tracker/login/domain": ["libs/login/domain/src/index.ts"],
      "@videogame-tracker/login/feature-auth": [
        "libs/login/feature-auth/src/index.ts"
      ],
      "@videogame-tracker/shared/auth": ["libs/shared/auth/src/index.ts"],
      "@videogame-tracker/shared/ui-components": [
        "libs/shared/ui-components/src/index.ts"
      ],
      "@videogame-tracker/shared/util-auth": [
        "libs/shared/util-auth/src/index.ts"
      ],
      "@videogame-tracker/videogame-tracker/domain": [
        "libs/videogame-tracker/domain/src/index.ts"
      ],
      "@videogame-tracker/videogame-tracker/feature-manage": [
        "libs/videogame-tracker/feature-manage/src/index.ts"
      ],
      "@videogame-tracker/videogame-tracker/feature-search": [
        "libs/videogame-tracker/feature-search/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
